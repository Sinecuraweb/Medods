<!DOCTYPE html>
<html>
  <head>
    <title>Tesla Project</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <!-- bootstrap css -->
    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css' %>

    <!-- font awesome -->
    <script src="https://use.fontawesome.com/96da45865a.js"></script>


    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>




  <div class="container-fluid">
    




  <header class="header">
  <!-- Fixed navbar -->

  <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">

    <a class="navbar-brand" href="/">Tesla Sell</a>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarCollapse">
      <ul class="navbar-nav mr-auto">

<!--         <li class="nav-item">

         <span class="nav-link"><%= link_to "Главная", boards_path %></span>

        </li>  -->

        <li class="nav-item">
          <span class="nav-link"><%= link_to "Добавить объявление", new_board_path %></span>
        </li>
        
        <% if user_signed_in? %>

        <li class="nav-item">
          <span class="nav-link"><%= link_to "Мой профиль", profile_index_path %></span>
        </li>

        <% end %>


      </ul>
     



    
      <span class="text-light mr-5">
        <% if user_signed_in? %>

        Привет, <%= current_user.email %>  
        
      
        <%= link_to "Выйти", destroy_user_session_path, :method => :delete, :class => 'btn btn-outline-danger mr-2 ml-3' %>

        <% else %>

        <%= link_to "Войти" , new_user_session_path, :class => 'btn btn-outline-light'  %>


        <% end %>
        
        </span>


      
      

      <form class="form-inline mt-2 mt-md-0">
        <input class="form-control mr-sm-2" type="text" placeholder="Поиск" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Найти</button>
      </form>

    

      <%= form_tag boards_path, :method => 'get' do %>

        <%= text_field_tag :search, params[:search] %>

        <%= submit_tag "search" %>

      <% end %>
      
      <% link_to "Расширенный поиск", new_search_path %>



    </div>
  </nav>

</header>

</div>   
  






<div class="container">
    <%= yield %>
</div>
  </body>
</html>

<style type="text/css">
  .header {
    min-height: 60px !important;
  }
</style>