<<div class="auth">
  <div class="auth__header">
    <div class="auth__logo">
      <img alt="Icon" src="/assets/logo2.png" height="90" />
    </div>
  </div>
  <div class="auth__body">


  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "auth__form" } ) do |f| %>


    <div class="auth__form_body">
      <h3 class="auth__form_title">Регистрация:</h3>
      <div>

        <div class="form-group">
          <%= f.label :email, :class => 'text-uppercase small' %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" , :class => 'form-control'%>
        </div>

        <div class="form-group">
          <%= f.label :пароль, :class => 'text-uppercase small' %><br />
          <!-- валидация пароля-->
          <% if @minimum_password_length %>
          <em class="text-muted small">(<%= @minimum_password_length %> символов минимум) </em>
          <% end %>

          <%= f.password_field :password, autocomplete: "new-password" , :class => 'form-control'%>
        </div>
        

        <div class="form-group">
          <%= f.label :password_confirmation, :class => 'text-uppercase small' %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" , :class => 'form-control'%>
        </div>


      </div>
    </div>


    <div class="auth__form_actions">
      <%= f.submit "Зарегистрироваться", :class => 'btn btn-primary btn-lg btn-block' %>

      <div class="mt-2">
        <%= render "devise/shared/links" %>
      </div>
    </div>

  

  <% end %>



  </div>
</div>







