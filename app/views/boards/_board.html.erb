<div class="row">
  <div class="col-6">
    <% if board.picture.url != nil %>
    <%= image_tag board.picture.url, :class => 'bd-placeholder-img card-img-top img-thumbnail min-280' %>
    <% end %>
  </div>
  <div class="col-6 card">

    <div class="card-body">
      <p class="card-text"><%= truncate(board.body, length: 500, separator: ' ' )  %></p>
      <div class="d-flex justify-content-between align-items-center">

        
        <section class="footer-summary">
          <%= raw board.tags.map(&:name).map { |t| link_to t, tag_path(t), class: 'badge badge-info' }.join(' ') %>
        </section>


        <small class="text-muted"><%= board.author %></small>
      </div>
      <div class="btn-group mt-3">
        <%= link_to "Смотреть", board, :class => 'btn btn-sm btn-outline-secondary' %>
        <%= link_to 'Изменить', edit_board_path(board), :class => 'btn btn-sm btn-outline-secondary' %> 
      </div>
      <time class="d-flex small text-muted mt-1">Добавлено : <%= board.created_at.to_date.strftime("%d %B, %Y") %></time>
    </div>
  </div>
</div>
