<article class="post">
  <section class="post-head">
    <h2><%= link_to board.title, board_path(board) %></h2>
    <small>
      <time><%= board.created_at.to_date.strftime("%d %B, %Y") %></time>
    
    </small>
  </section>

  <section class="post-summary clearfix">
   
    
  </section>

  <section class="footer-summary">
    <%= raw board.tags.map(&:name).map{ |t| link_to t, tag_path(t), class: 'badge badge-primary' }.join(' ') %>
  </section>
</article>